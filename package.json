{
  "name": "code-inserter",
  "displayName": "code-inserter",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-inserter-sidebar-view",
          "title": "コード挿入ツール",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "code-inserter-sidebar-view": [
        {
          "type": "webview",
          "id": "code-inserter.helloWorldView",
          "name": "コードスニペット"
        }
      ]
    },
    "commands": [
      {
        "command": "code-inserter.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "Code Inserter",
      "properties": {
        "code-inserter.snippets": {
          "type": "string",
          "default": "[]",
          "description": "保存されたコードスニペット",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@tailwindcss/postcss7-compat": "^2.2.17",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "autoprefixer": "^10.4.21",
    "css-loader": "^7.1.2",
    "eslint": "^9.21.0",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "process": "^0.11.10",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.0.15",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
